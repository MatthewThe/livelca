$('#alert').hide();
$('#notice').hide();

$('html,body').animate({ scrollTop: $("#current_recipe").offset().top }, 'slow');

$("#current_recipe").html("<%= escape_javascript(render partial: 'recipes/new') %>");

document.title = '<%=content_for?(:html_title) ? yield(:html_title) + " | LiveLCA" : "LiveLCA"%>'
document.querySelector('meta[name="description"]').setAttribute("content", '<%= content_for?(:meta_description) ? j(yield(:meta_description)) : default_meta_description %>');

initChosen()

$('[id^="country-autocomplete"]').autocomplete({
  source: '/country_autocomplete',
  autoFocus: true,
})

_paq.push(['setCustomUrl', window.location.href]);
_paq.push(['setDocumentTitle', document.title]);
_paq.push(['trackPageView']);
