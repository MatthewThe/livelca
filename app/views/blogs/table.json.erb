{
  "data": [
<% cache(@blogs) do %>
<% @blogs.each_with_index do |blog, i| %>
    <%= "," if i > 0 %>
    [  "<%= link_to(blog.title, blog, remote: true).gsub('"', '\"').html_safe %>",
       "<% if blog.published_at? %><%= blog.published_at.strftime("%Y-%m-%d") %><% else %>Not published<% end %>"
    ]
<% end %>
<% end %>
  ]
}
