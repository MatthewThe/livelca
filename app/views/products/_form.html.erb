<%= form_for @product, :html => { :onsubmit => "return updateWiki();" } do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, :required => true %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.text_field :category_name, id: 'product-autocomplete', :required => true %>
  </div>
  <div class="field">
    <%= f.label :proxy %><br>
    <%= f.text_field :proxy_name, id: 'product-autocomplete-2' %>
  </div>
  <div class="field">
    <%= f.label :wiki %><br>
    <%= f.text_area :wiki, cols: "80", rows: "20", id: 'wiki-editor' %>
    <div id="editor"></div>
  </div>
  <div class="actions">
    <%= f.submit class: "green button" %>
  </div>
<% end %>

<% content_for :head do %>
  <link rel="stylesheet" href="https://uicdn.toast.com/editor/latest/toastui-editor.css" />
  <script src="https://uicdn.toast.com/editor/latest/toastui-editor-all.min.js"></script>
<% end %>
