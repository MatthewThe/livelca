<h1>Merge product with <%=@product.name%></h1>

<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Merge the following product into this one" %><br>
    <%= f.text_field :merge_product_name, id: 'product-autocomplete', :required => true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back to product', @product %> |
<%= link_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure?' } %>
