<p id="notice"><%= notice %></p>

<h1>Listing Sources</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Name</th>
      <th>Country origin</th>
      <th>Country consumption</th>
      <th>Co2 equiv</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sources.each do |source| %>
      <tr>
        <td><%= link_to source.product_name, source.product %></td>
        <td><%= link_to source.resource.name, source.resource %></td>
        <td><%= link_to source.country_origin_name, source.country_origin %></td>
        <td><%= link_to source.country_consumption_name, source.country_consumption %></td>
        <td><%= source.co2_equiv %></td>
        <td><%= source.weight %></td>
        <td><%= link_to 'Show', source %></td>
        <td><%= link_to 'Edit', edit_source_path(source) %></td>
        <td><%= link_to 'Delete', source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

