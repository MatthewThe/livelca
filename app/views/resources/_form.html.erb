<%= form_for(@resource) do |f| %>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h2>

      <ul>
      <% @resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
  	<%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
  	<%= f.label :url %><br />
    <%= f.url_field :url %>
  </div>
  <div class="field">
    <%= f.label :default_weight %><br>
    <%= f.number_field :default_weight, step: 1 %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes, cols: "80", rows: "20" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
